.movable-view { 
    pointer-events:auto;/*重设为auto,覆盖父属性设置*/ 
    height: 50px; 
    width: 50px; 
    left: 90%; 
    top: 80%; 
    background-color:transparent; 
    border-radius: 50%; 
    text-align: center; 
} 

.movable-view image {
    width: 40px;
    height: 40px;

}