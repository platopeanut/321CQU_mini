<view class="send">
    <button bindtap="sendFeedback" style="margin: 30rpx 0;width: 100%;" type="primary">发送</button>
</view>

<view class="cu-form-group margin-top">
    <textarea maxlength="1000" disabled="{{modalName!=null}}" bindinput="bindInput" style="font-size: medium;height: 600rpx;" name="feedback" placeholder="有趣的灵魂终会相遇~"></textarea>
</view>
<view style="width: 750rpx;margin-top: 10rpx;text-align: right;">
    <text style="font-weight: bold; color: gray;margin-right: 20rpx;">{{length}}/1000</text>
</view>
