/* 文字大小 */
.wordsize{
  font-size: 30rpx;
}


/* scroll的class */
.VerticalNav.nav {
    width: 200rpx;
    white-space: initial;
  }
  
  .VerticalNav.nav .cu-item {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    background-color: rgb(239, 254, 255);
    margin: 0;
    border: none;
    height: 40px;
    position: relative;
  }
  
  .VerticalNav.nav .cu-item.cur {
    background-color: #ceedff;
  }
  .VerticalNav.nav .cu-item.cur::after {
    content: "";
    width: 8rpx;
    height: 50rpx;
    border-radius: 10rpx 0 0 10rpx;
    position: absolute;
    background-color: currentColor;
    top: 0;
    right: 0rpx;
    bottom: 0;
    margin: auto;
  }
  .VerticalBox{
    display: flex;
  }
  .VerticalMain{
    background-color: #f1f1f1;
  }