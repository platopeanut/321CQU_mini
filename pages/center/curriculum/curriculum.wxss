.top {
    position: fixed;
    top: 0rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
    justify-content: center; /**内容居中*/
    text-align: center;
    color: black;
    border-bottom: 1rpx solid rgb(233, 234, 236);
    z-index: 100;
    background-color: white;
}

.top .left {
    width: 50rpx;
    background-color: rgb(251, 252, 254);
}

.top .item {
    width: 100rpx;
}

.body {
    height: 130rpx;
    display: flex;
    flex-direction: row;
    text-align: center; 
    line-height: 130rpx;
    background-color: white;
    /* overflow: auto; */
}

.body .left {
    width: 50rpx;
    background-color: rgb(251, 252, 254);
}


.body .item {
    width: 100rpx;
}

.bottom {
    position:fixed; 
    bottom:0;
    height: 100rpx;
    width: 750rpx;
    flex-direction: row;
    line-height: 100rpx;
    text-align: center;
    font-size: 15px;
    font-weight: bold;
    z-index: 100;
    background-color: white;
    border-top: 1rpx solid rgb(233, 234, 236);
}

.bottom view text {
    margin-left: 40rpx;
    margin-right: 40rpx;
}

.bottom .mid {
    font-weight: normal;
}

.lesson {
    
    text-align: center;
    line-height:normal;
}

.left {
    display: inline-block;
    width: 50rpx;
    background-color: rgb(251, 252, 254);
}

.left .index {
    text-align: center;
    height: 130rpx;
    width: 50rpx;
    line-height: 130rpx;
}

.day_item {
    display: inline-block;
    width: 100rpx;
    height: 1690rpx;    /*130*13*/
}
.day_today_item {
    background-image: linear-gradient(white, #afdde8, white);
}

.wrapper_lesson_item {
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;
    overflow: hidden;
    border: 1rpx solid white;
    box-shadow: rgba(0, 0, 0, 0.1) 0rpx 4rpx 12rpx;
}
.lesson_item {
    color: white;
    display: flex;
    flex-direction: column;
    height: 100%;
    text-align: center;
    justify-content: center;
    align-items: center;
}
.lesson_item > .lesson_item_loc {
    border-bottom: 1px solid white;
}
.lesson_item > .lesson_item_name {

}
.lesson_self_item {
    color: white;
    display: flex;
    height: 100%;
    text-align: center;
    justify-content: center;
    align-items: center;
}

.layers {
    height: 1790rpx; /* 130*13 + 100*/
}


.layer1 {
    height: 1690rpx;    /*130*13*/
    display: flex;
    background-color: white;
    position: absolute;
    z-index: 0;
    pointer-events: auto;
}

.layer2 {
    width: 100%;
    height: 1690rpx;    /*130*13*/
    background-color: rgba(255,255,255,0);
    position: absolute;
    z-index: 2;
    pointer-events: none;
}